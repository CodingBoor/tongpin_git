<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim50"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dim75"
            android:layout_height="@dimen/dim75"
            android:layout_marginLeft="@dimen/dim30"
            android:scaleType="centerCrop"
            android:src="@mipmap/me_head_ycx_small"
            />
     <LinearLayout
         android:layout_width="0dp"
         android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim20"
            android:layout_toRightOf="@id/iv_head"
            android:textSize="@dimen/txt22"
            android:text=""
            android:textColor="@color/hint"/>

        <TextView
            android:id="@+id/fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/dim20"
            android:layout_marginTop="@dimen/dim14"
            android:textSize="@dimen/txt20"
            android:text=""
            android:textColor="@color/hintbg"/>
     </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.rey.material.widget.TextView
                style="@style/MaterialStyle"
                android:id="@+id/tv_same_question"
                android:layout_width="@dimen/dim100"
                android:layout_height="@dimen/dim40"
                android:background="@drawable/shape_live_question_gray"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dim30"
                android:textSize="@dimen/txt20"
                android:textColor="@color/hintbg"
                android:gravity="center"
                android:text=""
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dim125"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/title"
            android:layout_marginTop="@dimen/dim20"
            android:textColor="@color/bg"
            android:textSize="@dimen/txt26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <LinearLayout
            android:id="@+id/item_same"
            android:layout_marginTop="@dimen/dim25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim80"
            android:background="@drawable/shape_comment_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="@dimen/dim20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/txt22"
                    android:textColor="@color/juhuan1"/>
                <TextView
                    android:id="@+id/huifu"
                    android:layout_marginLeft="@dimen/dim15"
                    android:textSize="@dimen/txt22"
                    android:textColor="@color/hintbg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/dim20"
                android:id="@+id/huifuzhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:textSize="@dimen/txt26"
                android:layout_marginTop="@dimen/dim20"
                android:text=""/>
            <LinearLayout
                android:id="@+id/ll_question"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim20"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.rey.material.widget.RelativeLayout
                    android:visibility="visible"
                    style="@style/MaterialStyle"
                    android:id="@+id/rl_question_mingbai"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/live_question_mingbai"/>
                </com.rey.material.widget.RelativeLayout>
                <com.rey.material.widget.RelativeLayout
                    android:visibility="visible"
                    style="@style/MaterialStyle"
                    android:id="@+id/rl_question_soso"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/live_question_soso"/>
                </com.rey.material.widget.RelativeLayout>
                <com.rey.material.widget.RelativeLayout
                    android:visibility="visible"
                    style="@style/MaterialStyle"
                    android:id="@+id/rl_question_innocent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/live_question_innocent"/>
                </com.rey.material.widget.RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/color_ededed"
        android:layout_marginLeft="@dimen/dim128"
        android:layout_marginTop="@dimen/dim18"
        />

</LinearLayout>