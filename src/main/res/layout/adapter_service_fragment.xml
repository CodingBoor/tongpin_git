<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dim40"
    android:paddingRight="@dimen/dim40"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/position"
            android:layout_width="@dimen/dim40"
            android:layout_height="@dimen/dim40"
            android:background="@color/color_007df8"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/right"
            android:layout_width="@dimen/dim5"
            android:layout_height="@dimen/dim5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/color_007df8"
            android:layout_marginRight="@dimen/dim15"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim40"
            android:layout_toLeftOf="@+id/right"
            android:layout_toRightOf="@+id/position"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dim10"
            android:paddingRight="@dimen/dim10"
            android:textColor="@color/color_007df8"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="14sp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim100"
        android:scaleType="centerCrop"/>
</LinearLayout>