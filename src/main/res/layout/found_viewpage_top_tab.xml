<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim108"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/id_switch_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/found_viewpage_top_tab_new_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/txt36" />

        <View
            android:layout_width="@dimen/dim2"
            android:layout_height="@dimen/dim40"
            android:background="@color/color_66" />

        <TextView
            android:id="@+id/found_viewpage_top_tab_hot_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热门"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/txt36" />

        <View
            android:layout_width="@dimen/dim2"
            android:layout_height="@dimen/dim40"
            android:background="@color/color_66" />

        <TextView
            android:id="@+id/found_viewpage_top_tab_teacher_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名师"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/txt36" />

        <View
            android:layout_width="@dimen/dim2"
            android:layout_height="@dimen/dim40"
            android:background="@color/color_66" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/found_viewpage_top_tab_course_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/discipline_small"
                />

            <TextView
                android:id="@+id/found_viewpage_top_tab_course_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="学科"
                android:textSize="@dimen/txt36"
                android:textColor="@color/color_course_green"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_marginRight="@dimen/dim10"
                />

            <ImageView
                android:id="@+id/found_viewpage_top_tab_course_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/drop_down_close3"
                />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/found_viewpage_top_tab_line_iv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim0"
        android:background="@drawable/tab_selected_pressed_holo_small"
        android:contentDescription="tab" />

</LinearLayout>