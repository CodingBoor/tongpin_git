<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_check"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dim16"
              android:layout_marginRight="@dimen/dim16"
              android:layout_marginTop="@dimen/dim20"
              android:background="@drawable/live_right_popu_check"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/dim15"
        android:id="@+id/iv_gifts"
        android:layout_width="@dimen/dim70"
        android:layout_height="@dimen/dim70"
        />

    <TextView
        android:id="@+id/tv_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim3"
        android:text=""
        android:lines="1"
        android:gravity="center_horizontal"
        android:textColor="@color/hint"
        android:textSize="@dimen/txt28"
        />

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dim10"
        android:layout_marginTop="@dimen/dim13"
        android:drawableLeft="@mipmap/live_energy_small"
        android:drawablePadding="@dimen/dim8"
        android:text=""
        android:textColor="@color/juhuan1"
        android:textSize="@dimen/txt20"/>
</LinearLayout>
