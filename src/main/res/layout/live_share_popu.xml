<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
    android:background="#80000000"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_popu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim100"
        android:textColor="@color/white"
        android:textSize="@dimen/dim30"
        android:text="分享到"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim30"
        android:layout_marginLeft="@dimen/dim50"
        android:layout_marginRight="@dimen/dim50">
        <TextView
            android:id="@+id/share_qq"
            android:layout_width="@dimen/dim120"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_qq"
            android:textColor="@color/white"
            android:textSize="@dimen/txt28"
            android:text="QQ"
            android:drawablePadding="@dimen/dim17"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/share_weixin"
            android:layout_width="@dimen/dim120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim60"
            android:drawableTop="@mipmap/share_weixin"
            android:textColor="@color/white"
            android:textSize="@dimen/txt28"
            android:text="微信"
            android:drawablePadding="@dimen/dim17"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim30"
        android:layout_marginLeft="@dimen/dim50"
        android:layout_marginRight="@dimen/dim50">
        <TextView
            android:id="@+id/share_weixin_friend"
            android:layout_width="@dimen/dim120"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_weixin_friend"
            android:textColor="@color/white"
            android:textSize="@dimen/txt28"
            android:text="朋友圈"
            android:drawablePadding="@dimen/dim17"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/share_sina"
            android:layout_width="@dimen/dim120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim60"
            android:drawableTop="@mipmap/share_sina"
            android:textColor="@color/white"
            android:textSize="@dimen/txt28"
            android:text="新浪微博"
            android:drawablePadding="@dimen/dim17"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        />

</LinearLayout>
