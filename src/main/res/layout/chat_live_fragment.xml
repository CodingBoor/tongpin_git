<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_fragment"
                android:background="@mipmap/live_message_bg"
                android:paddingRight="@dimen/dim29"
                android:orientation="vertical">

    <TextView
        android:id="@+id/text_chat_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/dim30"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_common_rounded_white_border_gray"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="我来说两句"
        android:textColor="@color/gray_deep"
        android:textSize="15dp"/>


    <ListView
        android:id="@+id/lv_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text_chat_content"
        android:layout_marginRight="@dimen/dim30"
        android:transcriptMode="alwaysScroll"></ListView>

    <TextView
        android:id="@+id/tv_hide"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dim30"
        android:layout_height="match_parent"/>

</RelativeLayout>