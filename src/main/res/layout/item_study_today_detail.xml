<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        style="@style/MaterialStyleMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim190"
                android:background="@color/white">

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dim13"
                    android:layout_marginLeft="@dimen/dim30"
                    android:layout_marginRight="@dimen/dim40"
                    android:layout_marginTop="@dimen/dim30"
                    android:layout_toLeftOf="@+id/iv_img"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:ellipsize="end"
                        android:text=""
                        android:textColor="@color/bg"
                        android:textSize="@dimen/txt30"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/hintbg"
                            android:textSize="@dimen/txt20"
                            />

                        <TextView
                            android:id="@+id/tv_look"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim40"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/study_look_icon"
                            android:drawablePadding="@dimen/dim10"
                            android:text=""
                            android:textColor="@color/hintbg"
                            android:textSize="@dimen/txt20"
                            />

                        <TextView
                            android:id="@+id/tv_star"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/study_star_icon"
                            android:drawablePadding="@dimen/dim10"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/dim20"
                            android:paddingTop="@dimen/dim20"
                            android:text=""
                            android:textColor="@color/hintbg"
                            android:textSize="@dimen/txt20"
                            />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="@dimen/dim200"
                    android:layout_height="@dimen/dim150"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim30"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/xinlang"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_dcdcdc"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/delete"
                android:layout_width="@dimen/dim150"
                android:layout_height="match_parent"
                android:background="@color/juhuan1"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
        </LinearLayout>

    </HorizontalScrollView>

</com.rey.material.widget.RelativeLayout>
