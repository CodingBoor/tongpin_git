<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bg"
        android:textColor="#63ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_66"
        android:padding="@dimen/dim27"
        android:gravity="center"
        android:text="分享"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim217"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dim35"
        android:layout_marginRight="@dimen/dim35">

        <LinearLayout
            android:id="@+id/circle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim24"
                android:text="QQ"
                android:textColor="@color/xbg"
                android:textSize="@dimen/txt28" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim24"
                android:text="微信"
                android:textColor="@color/xbg"
                android:textSize="@dimen/txt28" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wx"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_weixin_friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim24"
                android:text="朋友圈"
                android:textColor="@color/xbg"
                android:textSize="@dimen/txt28" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wx_circle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_sina" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim24"
                android:text="新浪微博"
                android:textColor="@color/xbg"
                android:textSize="@dimen/txt28" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_ededed" />

    <TextView
        android:id="@+id/cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/hint"
        android:textSize="@dimen/txt30" />
    </LinearLayout>
</RelativeLayout>
