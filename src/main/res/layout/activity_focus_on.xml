<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/color_dialog_gray"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim90"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/focuson_frag_coursell"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tea_kc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/nocurriculum"
                        android:drawablePadding="@dimen/dim5"
                        android:gravity="center_vertical"
                        android:text="课程"
                        android:textSize="@dimen/txt30"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/focuson_frag_teacherll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_ededed"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tea_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/focuson_teacher"
                        android:drawablePadding="@dimen/dim5"
                        android:gravity="center_vertical"
                        android:text="老师"
                        android:textSize="@dimen/txt30"/>
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <FrameLayout
                android:id="@+id/focuson_frag_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/focuson_frag_content_teach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            </RelativeLayout>

        </LinearLayout>
</LinearLayout>