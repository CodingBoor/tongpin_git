<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.qmx163.activity.Me.PwdActivity">

    <include layout="@layout/include_title" />

    <ImageView
        android:id="@+id/pwd_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim50"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ph_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim82"
            android:layout_marginTop="@dimen/dim60"
            android:background="@drawable/shape_input_username"
            android:digits="1234567890"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/dim36"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/loginname"
            android:drawablePadding="@dimen/dim24"
            android:paddingLeft="@dimen/dim24"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim82"
            android:layout_marginTop="@dimen/dim60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/re_Edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dim36"
                android:layout_weight="0.7"
                android:background="@drawable/shape_input_username"
                android:digits="1234567890"
                android:gravity="center_vertical"
                android:hint="请输入手机验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/dim36"
                android:drawableLeft="@mipmap/yzm"
                android:drawablePadding="@dimen/dim24"
                android:paddingLeft="@dimen/dim24"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/getSmsCode"
                    android:layout_width="@dimen/dim180"
                    android:layout_height="@dimen/dim63"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:textSize="@dimen/txt26"
                    android:textColor="@color/white"
                    android:background="@drawable/text_corner_orange" />
            </LinearLayout>
        </LinearLayout>

        <!--<EditText-->
        <!--android:id="@+id/oldpwd"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dim82"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="@dimen/dim60"-->
        <!--android:background="@drawable/shape_input_username"-->
        <!--android:drawableLeft="@mipmap/pwdlogin"-->
        <!--android:drawablePadding="4dp"-->
        <!--android:ems="10"-->
        <!--android:gravity="center_vertical"-->
        <!--android:hint="请输入您旧的密码"-->
        <!--android:inputType="textPersonName"-->
        <!--android:padding="4dp"-->
        <!--android:textColorHint="@color/grey"-->
        <!--android:textSize="@dimen/dim36"-->
        <!--/>-->

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim82"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim60"
            android:background="@drawable/shape_input_username"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入您新的密码"
            android:inputType="textPassword"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/dim36"
            android:paddingLeft="@dimen/dim24"
            android:drawableLeft="@mipmap/pwdlogin"
            android:drawablePadding="@dimen/dim24"
            />

        <com.rey.material.widget.TextView
            android:id="@+id/btn_rg_cz"
            style="@style/MaterialStyleNone"
            android:gravity="center"
            android:textSize="@dimen/txt30"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim70"
            android:layout_marginTop="@dimen/dim60"
            android:background="@drawable/shape_logout"
            android:text="注册"
            />
    </LinearLayout>








    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rey.material.widget.TextView
            style="@style/MaterialStyle"
            android:id="@+id/exitpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dim40"
            android:layout_marginTop="@dimen/dim40"
            android:text="我有账号，立即登录"
            android:textColor="@color/juhuan1"
            android:textSize="@dimen/dim30" />
    </RelativeLayout>
</LinearLayout>
