<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_login"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/include_title"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim50"
            android:src="@mipmap/logo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:layout_marginRight="@dimen/dim40"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim84"
                android:layout_marginTop="@dimen/dim50"
                android:background="@drawable/shape_input_username"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim84"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim60"
                    android:background="@null"
                    android:drawableLeft="@mipmap/loginname"
                    android:drawablePadding="@dimen/dim24"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="请输入您的手机号"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/dim24"

                    android:paddingRight="4dp"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/dim36"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim84"
                android:layout_marginTop="@dimen/dim50"
                android:background="@drawable/shape_input_username"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edpwd"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim84"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@mipmap/pwdlogin"
                    android:drawablePadding="@dimen/dim24"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="请输入您的密码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dim24"

                    android:paddingRight="4dp"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/dim36"
                    />

                <com.rey.material.widget.TextView
                    style="@style/MaterialStyleMain"
                    android:padding="@dimen/dim5"
                    android:id="@+id/forgetPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dim25"
                    android:gravity="center"
                    android:text="忘记密码?"
                    android:textColor="@color/bg"
                    android:textSize="@dimen/dim32"/>
            </LinearLayout>

            <com.rey.material.widget.TextView
                android:id="@+id/login"
                style="@style/MaterialStyleNone"
                android:gravity="center"
                android:textSize="@dimen/txt30"
                android:text="登录"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim70"
                android:layout_marginTop="@dimen/dim50"
                android:background="@drawable/shape_logout"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim40">

                <com.rey.material.widget.TextView
                    style="@style/MaterialStyleMain"
                    android:id="@+id/Regist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/zhuce"
                    android:textColor="@color/bg"
                    android:textSize="@dimen/dim30"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim32"
                android:layout_marginBottom="@dimen/dim5"
                android:layout_marginTop="@dimen/dim40"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:background="@color/grey_middle"
                    android:gravity="center_horizontal"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center_horizontal"
                        android:text="第三方账号登录"
                        android:textColor="@color/hintbg"
                        android:textSize="@dimen/dim25"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:background="@color/grey_middle"
                    android:gravity="center_horizontal"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim35"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.rey.material.widget.ImageView
                        style="@style/MaterialStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/weixin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.rey.material.widget.ImageView
                        style="@style/MaterialStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xinlang"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新浪微博"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.rey.material.widget.ImageView
                        style="@style/MaterialStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/loginqq"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
</RelativeLayout>
