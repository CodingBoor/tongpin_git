<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#0000" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="@dimen/dim20">
